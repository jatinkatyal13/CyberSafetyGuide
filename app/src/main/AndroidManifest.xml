<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.safety.cybersafetyguide">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/FacebookAppId" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".about_us"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>

        <service
            android:name=".background"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".victim"
            android:label="@string/title_activity_victim"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>
        <activity
            android:name=".victim_display"
            android:label="@string/title_activity_victim_display"
            android:parentActivityName=".victim"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.victim" />
        </activity>
        <activity
            android:name=".Guideline"
            android:label="@string/title_activity_guideline"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>
        <activity
            android:name=".cyber_cells"
            android:label="@string/title_activity_cyber_cells"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>
        <activity android:name=".sign_in" />
        <activity android:name=".under_construction">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>
        <activity
            android:name=".consult_expert"
            android:label="@string/title_activity_consult_expert"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>
        <activity
            android:name=".cyber_cells_display"
            android:label="@string/title_activity_cyber_cells_display"
            android:parentActivityName=".cyber_cells"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.cyber_cells" />
        </activity>
        <activity
            android:name=".threats"
            android:label="@string/title_activity_threats"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>
        <activity
            android:name=".threat_display"
            android:label="@string/title_activity_threat_display"
            android:parentActivityName=".threats"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.threats" />
        </activity>
        <activity android:name=".sign_in_2" />
        <activity android:name=".reset_pass" />
        <activity android:name=".reset_pass_2" />
        <activity android:name=".change_pass" />
        <activity android:name=".registration" />
        <activity
            android:name=".welcome"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        <activity android:name=".login" />
        <activity android:name=".expert_panel">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.about_us" />
        </activity>
        <activity android:name=".developer_panel">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.about_us" />
        </activity>
        <activity
            android:name=".report"
            android:label="@string/title_activity_report"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.MainActivity" />
        </activity>
        <activity
            android:name=".report_abuse"
            android:label="@string/title_activity_report_abuse"
            android:parentActivityName=".report"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.guide.safety.cybersafetyguide.report" />
        </activity>

        <service
            android:name=".first"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>